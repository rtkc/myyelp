%section.register.container
  .row
    .col-sm-10.col-sm-offset-1
      %form.form-horizontal
        %header
          %h1 Add a new business
        %fieldset
          .form-group
            %label.control-label.col-sm-2 Business name
            .col-sm-6
              %input.form-control(type="text")
          .form-group
            %label.control-label.col-sm-2 Business category
            .col-sm-6
              %select.form-contol(name="")
                %option(value="Food") Food
                %option(value="Nightlife") Nightlife
                %option(value="Shopping") Shopping
                %option(value="Active Life") Active Life
                %option(value="Arts & Entertainmnet") Arts & Entertainment
          .form-group
            %label.control-label.col-sm-2 Address
            .col-sm-6
              %input.form-control(type="text")
          .form-group
            %label.control-label.col-sm-2 Country
            .col-sm-6
              %input.form-control(type="text")
          .form-group
            %label.control-label.col-sm-2 Website
            .col-sm-6
              %input.form-control(type="text")
        %fieldset.actions.control-group.col-sm-offset-2
          .controls
            %input(type="submit" value="Sign Up" class="btn btn-default")