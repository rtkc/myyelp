%section#top-header.row
  %h1.col-md-2
    = link_to("MyYelp", root_path)
  - if logged_in?
    %ul.col-md-4.clearfix
      %li= link_to "All businesses", home_path
      %li= link_to "All reviews", reviews_path
      %li= link_to "Add new business", new_business_path
    #user_links.pull-right
      %ul
        %li.dropdown
          %a(href="#" id="dlabel" role="button" data-toggle="dropdown" class="dropdown-toggle" data-target="#")
            = "Welcome, #{current_user.full_name}"
            %b.caret
          %ul.dropdown-menu(role="menu" aria-labelledby="dlabel")
            %li
              %li= link_to 'Your profile', user_path(current_user)
              %li= link_to 'Sign out', sign_out_path