%article.profile
  .container
    .row
      .profile_info.col-sm-10
        %header
          %h3= "#{@user.full_name}'s' reviews"

%section.reviews.container
  .row
    .col-sm-10.col-sm-offset-1
      %ul
        - @reviews.each do |review| 
          %article.review
            %li.row
              .col-sm-2
                %span= "Rating #{review.rating}/5"
                %p 
                  = "by "
                  = link_to review.creator.full_name, review.creator
              .col-sm-8
                %p= "#{review.review}"